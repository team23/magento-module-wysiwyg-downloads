<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="cms">
            <group id="wysiwyg">
                <field id="file_extensions"
                       translate="label comment"
                       showInDefault="1"
                       showInWebsite="0"
                       showInStore="0"
                       canRestore="1"
                       sortOrder="20">
                    <label>Extra Allowed File Extensions in WYSIWYG Editor</label>
                    <frontend_model>Team23\WysiwygDownloads\Block\Adminhtml\System\Config\Form\Field\FileExtensions</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                    <comment><![CDATA[By default the following file extensions are available: 'doc', 'docm', 'docx', 'pdf', 'zip', 'svg']]></comment>
                </field>
            </group>
        </section>
    </system>
</config>
